# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index
GET     /search                     controllers.Application.search_view
POST    /index/query                controllers.Application.index_query
POST    /index/update               controllers.Application.index_update
POST    /search                     controllers.Application.search
GET     /download/:hash             controllers.Application.download(hash: String, filename: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
